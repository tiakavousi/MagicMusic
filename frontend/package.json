{
    "name": "magic-musics",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "axios": "^1.7.2",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-scripts": "^3.0.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.0.0",
        "@testing-library/react": "^13.0.0",
        "axios-mock-adapter": "^1.20.0",
        "jest": "^28.0.0",
        "jest-junit": "^12.0.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "jest --coverage --reporters=jest-junit",
        "eject": "react-scripts eject"
    },
    "jest": {
        "collectCoverage": true,
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/vendor/**"
        ],
        "testMatch": [
            "**/__tests__/**/*.js?(x)",
            "**/?(*.)+(spec|test).js?(x)"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover"
        ]
    }
}
